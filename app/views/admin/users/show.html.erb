<% provide :title, @user.name %>
<div class="row">
  <div class="toppad col-xs-12 col-md-12 col-sm-12" >
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title center"><%= @user.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-9 col-lg-9">
            <table class="table table-user-information">
              <tbody>
                <tr>
                  <td><%= t "admin.users.email" %></td>
                  <td><%= @user.email %></td>
                </tr>
                <tr>
                  <td><%= t "admin.users.chatwork" %></td>
                  <td><%= @user.chatwork_id %></td>
                </tr>
                <tr>
                  <td><%= t "admin.users.create_at" %></td>
                  <td>
                    <%= l @user.created_at, format: :date_time %>
                  </td>
                </tr>
                <tr>
                  <td><%= t "admin.users.role" %></td>
                  <td>
                    <span class="label label-danger"><%= @user.role %></span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <%= mail_to @user.email, class: "btn btn-sm btn-primary" do %>
          <i class="glyphicon glyphicon-envelope"></i>
          <%= t ".send_mail" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
