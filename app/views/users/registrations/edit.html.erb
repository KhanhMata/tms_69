<% provide :title, t("update_user") %>
<div class="agiles">
  <div class="main">
    <%= tag(:br) %><%= tag(:br) %>
      <div class="signup"><center><h4><%= t ".title" %></h4></center></div>
    <%= tag(:br) %><%= tag(:br) %>
    <div class="signin-form profile">
      <div class="login-form">
        <%= simple_form_for resource, as: resource_name,
          url: registration_path(resource_name),
          html: {method: :put} do |f| %>
          <%= f.error_notification %>

          <%= f.text_field :name %>

          <%= f.text_field :chatwork_id %>

          <%= f.email_field :email %>

          <% if devise_mapping.confirmable? && resource
            .pending_reconfirmation? %>
            <p><%= t "waiting_confirmation" %>
              <%= resource.unconfirmed_email %>
            </p>
          <% end %>

          <%= f.password_field :password, autocomplete: "off",
            placeholder: t(".Password") %>

          <%= f.password_field :password_confirmation, autocomplete: "off",
            placeholder: t(".PasswordConfirmation") %>

          <%= f.password_field :current_password, autocomplete: "off",
            placeholder: t(".CurrentPassword") %>

          <%= f.button :submit, t("update_profile") %>

          <%= link_to t("cancel_account"), registration_path(resource_name),
            data: { confirm: t("are_you_sure") }, method: :delete %>
        <% end %>
        <%= link_to t("back"), :back %>
      </div>
    </div>
  </div>
  <div class="clear"></div>
</div>
